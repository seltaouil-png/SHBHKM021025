  <div id="memories" class="section">
    <h2>Memories</h2>
    <div class="gallery" id="gallery"></div>
    <br />
    <label>Add Image:</label>
    <input type="file" id="imgInput" accept="image/*" />
    <button onclick="addImage()">Upload</button>
  </div>

  <div id="music" class="section">
    <h2>Music</h2>
    <div id="musicList"></div>
    <br />
    <label>Add Music:</label>
    <input type="file" id="musicInput" accept="audio/*" />
    <button onclick="addMusic()">Upload</button>
  </div>

  <script>
    function checkPass() {
      const p = document.getElementById('pass').value;
      if (p === '021025') {
        document.getElementById('passwordScreen').style.display = 'none';
      } else {
        alert('Incorrect password');
      }
    }

    function addImage() {
      const file = document.getElementById('imgInput').files[0];
      if (!file) return;
      const reader = new FileReader();
      reader.onload = () => {
        const img = document.createElement('img');
        img.src = reader.result;
        document.getElementById('gallery').appendChild(img);
      };
      reader.readAsDataURL(file);
    }

    function addMusic() {
      const file = document.getElementById('musicInput').files[0];
      if (!file) return;
      const reader = new FileReader();
      reader.onload = () => {
        const audio = document.createElement('audio');
        audio.controls = true;
        audio.src = reader.result;
        document.getElementById('musicList').appendChild(audio);
      };
      reader.readAsDataURL(file);
    }
  </script>

